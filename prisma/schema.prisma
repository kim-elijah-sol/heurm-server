generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(cuid())
  name           String
  email          String   @unique
  password       String
  timezone       String
  timezoneOffset Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Challenge relationship
  challenges     Challenge[]
}

model Challenge {
  id          String   @id @default(cuid())
  title       String
  color       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // User relationship
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  // ChallengeItem relationship
  items       ChallengeItem[]
}

model ChallengeItem {
  id          String   @id @default(cuid())
  name        String
  type        ChallengeItemType
  days        String[]
  targetCount Int?
  unit        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Challenge relationship
  challengeId String
  challenge   Challenge @relation(fields: [challengeId], references: [id])

  // ChallengeItemHistory relationship
  history     ChallengeItemHistory[]
}

enum ChallengeItemType {
  COMPLETE
  OVER
  UNDER
}

model ChallengeItemHistory {
  id          String   @id @default(cuid())
  date        DateTime
  complete    Boolean?
  count       Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // ChallengeItem relationship
  challengeItemId String
  challengeItem   ChallengeItem @relation(fields: [challengeItemId], references: [id])

  @@unique([challengeItemId, date])
}